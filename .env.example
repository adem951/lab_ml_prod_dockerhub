# Example environment variables for Task Manager Application
# Copy this file to .env and fill in your actual values

# Flask Secret Key (generate a secure random string for production)
SECRET_KEY=your-secret-key-here-change-in-production

# PostgreSQL Database Configuration (for local development)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=taskmanager

# Alternative: Use DATABASE_URL for production (NeonDB, Heroku, etc.)
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
